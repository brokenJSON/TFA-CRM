# TFA CRM Configuration
# Copy this file to .env and update with your values

# Server Configuration
PORT=4000
NODE_ENV=development

# API Security
# IMPORTANT: Change this in production! Generate a strong random key
TFA_API_KEY=dev-key

# Session Configuration (for future authentication implementation)
SESSION_SECRET=change-this-to-a-long-random-string-in-production
SESSION_DURATION=86400000

# Database Configuration
DB_FILE=./tfa.db

# Email Configuration (for future email notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=notifications@tfa.org

# Application Settings
APP_NAME=The Family Advocates CRM
APP_URL=http://localhost:4000

# Security Settings
BCRYPT_ROUNDS=10
PASSWORD_MIN_LENGTH=8

# Rate Limiting (requests per minute)
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
# LOG_FILE=./logs/app.log

